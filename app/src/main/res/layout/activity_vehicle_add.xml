<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.vehicle.add.VehicleAddActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_marca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/et_brand"
            android:text="@string/brand"
            android:theme="@style/TextViewThemeLabel" />

        <EditText
            android:id="@+id/et_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:autofillHints=""
            android:theme="@style/EditTextTheme"/>

        <TextView
            android:id="@+id/tv_modelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/model"
            android:theme="@style/TextViewThemeLabel" />

        <EditText
            android:id="@+id/et_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:autofillHints=""
            android:theme="@style/EditTextTheme"/>

        <TextView
            android:id="@+id/tv_fuel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fuels"
            android:theme="@style/TextViewThemeLabel" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_fuel_types"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />

            <EditText
                android:id="@+id/et_fuel_kml"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/kml"
                android:inputType="textPersonName"
                android:theme="@style/EditTextTheme" />

            <ImageButton
                android:id="@+id/ib_fuel_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:backgroundTint="@color/orange"
                app:srcCompat="@drawable/ic_baseline_add_32"
                android:contentDescription="@string/btAdd" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_required_fuel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/required_fuel"
            android:textColor="@color/red_error"
            android:visibility="gone"
            android:theme="@style/TextViewTheme" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_rv_header_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/medium_gray"
                android:paddingStart="@dimen/margin_small"
                android:paddingEnd="@dimen/margin_small"
                android:text="@string/type"
                android:theme="@style/TextViewThemeLabel" />

            <TextView
                android:id="@+id/tv_rv_header_kml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/medium_gray"
                android:paddingStart="@dimen/margin_small"
                android:paddingEnd="@dimen/margin_small"
                android:text="@string/kml"
                android:theme="@style/TextViewThemeLabel" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_fuel"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/light_gray"
            android:paddingStart="@dimen/margin_small"
            android:paddingEnd="@dimen/margin_small" />

        <TextView
            android:id="@+id/tv_maitenance_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/maitenance"
            android:textStyle="bold"
            android:theme="@style/TextViewThemeLabel" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_maitenance_type"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1.1"
                android:autofillHints=""
                android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />

            <TextView
                android:id="@+id/tv_of"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:gravity="center_horizontal"
                android:text="@string/of"
                android:textAppearance="@style/TextViewTheme" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_maitenance_cost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/value"
                android:inputType="textPersonName"
                android:theme="@style/EditTextTheme" />

            <EditText
                android:id="@+id/et_maitenance_cost_months"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/frequency"
                android:inputType="textPersonName"
                android:theme="@style/EditTextTheme" />

            <ImageButton
                android:id="@+id/ib_add_maitenance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:backgroundTint="@color/orange"
                app:srcCompat="@drawable/ic_baseline_add_32"
                android:contentDescription="@string/btAdd" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_maitenance"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/light_gray" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>